<section class="login " id="Login">
    <div id="loginCloseArea"></div>
    <div class="loginArea logInOut" data-aos="zoom-in-up">
        <form action="/Login" method="post">
            <div class="logform_group">
                <input type="text" id="username" name="username" placeholder="Username.." required>
                <i class="uil uil-user"></i>
            </div>
            <div class="logform_group select">
                <select name="profession" id="profession">
                    <option value="0">Farmer</option>
                    <option value="1">Dealer</option>
                </select>
                <i class="uil uil-user-md"></i>
            </div>
            <div class="logform_group">
                <input type="password" class="password" id="password" name="password" placeholder="Password.."
                    required>
                <i class="uil uil-eye-slash viewPass"></i>
            </div>
            <button type="submit" class="logInOutBtn">
                Log-in
            </button>
        </form>
        <p>
            New User ? Create an account. <span id="SwitchToSignUp">Sign Up</span>
        </p>
    </div>
    <div class="signinArea logInOut UserInActive" data-aos="zoom-in-up">
        <form action="/Register" method="post">
            <div class="logform_group">
                <input type="text" id="Name" name="Name" placeholder="Name.." required>
            </div>
            <div class="logform_group">
                <input type="text" id="USERname" name="USERname" placeholder="Username.." required>
            </div>
            <div class="logform_group">
                <input type="tel" id="Phone" name="Phone" placeholder="Phone No.." pattern="[0-9]{10}" required>
                <i class="uil uil-phone"></i>
            </div>
            <div class="logform_group select">
                <select name="profession" id="profession">
                    <option value="0">Farmer</option>
                    <option value="1">Dealer</option>
                </select>
                <i class="uil uil-user-md"></i>
            </div>
            <div class="logform_group">
                <input type="text" id="Email" name="Email" placeholder="E-mail Id.." required>
                <i class="uil uil-envelope-check"></i>
            </div>
            <div class="logform_group">
                <input type="password" class="password" id="password" name="password" placeholder="Password.."
                    required>
                <i class="uil uil-eye-slash viewPass"></i>
            </div>
            <div class="logform_group">
                <input type="text" id="re-Password" name="re-Password" placeholder="Re-enter.." required>
            </div>
            <button type="submit" class="logInOutBtn">
                Sign Up
            </button>
        </form>
        <p style="margin-top: 21px;">
            Already a user ? <span id="SwitchToLogIn">Log in</span>
        </p>
    </div>
</section>